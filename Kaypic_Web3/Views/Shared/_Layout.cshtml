<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kaypic_Web3.styles.css" asp-append-version="true" />
</head>
<style>
    #homeText {
        color: #0d47ff;
    }

    #userIcon {
        color: #0d47ff;
    }
</style>
<body>
    <div class="top-banner"> Bienvenue sur Kaypic! </div>

    <header style="font-weight:bold;">
        <a href="#home" id="homeText">Kaypic</a>
        <!--Page de login-->
        <a href="/Account/Login" title="Login">
            <i class='far fa-user-circle' id="userIcon" style="font-size:25px"></i>
        </a>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>